{
  "info": {
    "name": "DocumentAI Backend API",
    "_postman_id": "documentai-backend",
    "description": "Collection for backend API (import into Postman). Uses environment variables: API_BASE=http://localhost:8000/api and TOKEN=<jwt>",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Signup",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Alice\",\n  \"email\": \"alice@example.com\",\n  \"password\": \"secret\"\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": { "raw": "{{API_BASE}}/auth/signup", "host": ["{{API_BASE}}"], "path": ["auth","signup"] }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"alice@example.com\",\n  \"password\": \"secret\"\n}", "options": { "raw": { "language": "json" } } },
        "url": { "raw": "{{API_BASE}}/auth/login", "host": ["{{API_BASE}}"], "path": ["auth","login"] }
      }
    },
    {
      "name": "Auth - Me",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{TOKEN}}" } ],
        "url": { "raw": "{{API_BASE}}/auth/me", "host": ["{{API_BASE}}"], "path": ["auth","me"] }
      }
    },
    {
      "name": "Projects - List",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{TOKEN}}" } ],
        "url": { "raw": "{{API_BASE}}/projects", "host": ["{{API_BASE}}"], "path": ["projects"] }
      }
    },
    {
      "name": "Projects - Create",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{TOKEN}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"title\": \"My Project\",\n  \"docType\": \"docx\",\n  \"topic\": \"AI for teams\",\n  \"scaffold\": \"Intro content\"\n}", "options": { "raw": { "language": "json" } } },
        "url": { "raw": "{{API_BASE}}/projects", "host": ["{{API_BASE}}"], "path": ["projects"] }
      }
    },
    {
      "name": "Projects - Get",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{TOKEN}}" } ],
        "url": { "raw": "{{API_BASE}}/projects/:id", "host": ["{{API_BASE}}"], "path": ["projects", ":id"] }
      }
    },
    {
      "name": "Projects - Generate",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{TOKEN}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"sectionId\": 1,\n  \"slideIndex\": 0\n}", "options": { "raw": { "language": "json" } } },
        "url": { "raw": "{{API_BASE}}/projects/:id/generate", "host": ["{{API_BASE}}"], "path": ["projects", ":id","generate"] }
      }
    },
    {
      "name": "Projects - Generate All",
      "request": {
        "method": "POST",
        "header": [ { "key": "Authorization", "value": "Bearer {{TOKEN}}" } ],
        "url": { "raw": "{{API_BASE}}/projects/:id/generate_all", "host": ["{{API_BASE}}"], "path": ["projects", ":id","generate_all"] }
      }
    },
    {
      "name": "Projects - Refine",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{TOKEN}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"sectionId\": 1,\n  \"prompt\": \"Make this more concise and professional.\"\n}", "options": { "raw": { "language": "json" } } },
        "url": { "raw": "{{API_BASE}}/projects/:id/refine", "host": ["{{API_BASE}}"], "path": ["projects", ":id","refine"] }
      }
    },
    {
      "name": "Projects - Feedback",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{TOKEN}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"sectionId\": 1,\n  \"like\": true\n}", "options": { "raw": { "language": "json" } } },
        "url": { "raw": "{{API_BASE}}/projects/:id/feedback", "host": ["{{API_BASE}}"], "path": ["projects", ":id","feedback"] }
      }
    },
    {
      "name": "Projects - Comment",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{TOKEN}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"sectionId\": 1,\n  \"comment\": \"Please add citations here.\"\n}", "options": { "raw": { "language": "json" } } },
        "url": { "raw": "{{API_BASE}}/projects/:id/comment", "host": ["{{API_BASE}}"], "path": ["projects", ":id","comment"] }
      }
    },
    {
      "name": "Projects - Suggest Outline",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{TOKEN}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"topic\": \"AI adoption for small teams\"\n}", "options": { "raw": { "language": "json" } } },
        "url": { "raw": "{{API_BASE}}/projects/:id/suggest_outline", "host": ["{{API_BASE}}"], "path": ["projects", ":id","suggest_outline"] }
      }
    },
    {
      "name": "Projects - Files",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{TOKEN}}" } ],
        "url": { "raw": "{{API_BASE}}/projects/:id/files", "host": ["{{API_BASE}}"], "path": ["projects", ":id","files"] }
      }
    },
    {
      "name": "Projects - Export",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{TOKEN}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"format\": \"docx\",\n  \"sections\": [1],\n  \"includeComments\": true\n}\n", "options": { "raw": { "language": "json" } } },
        "url": { "raw": "{{API_BASE}}/projects/:id/export", "host": ["{{API_BASE}}"], "path": ["projects", ":id","export"] }
      }
    }
  ],
  "event": [],
  "variable": [
    { "key": "API_BASE", "value": "http://localhost:8000/api" },
    { "key": "TOKEN", "value": "" }
  ]
}
